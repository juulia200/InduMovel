@model InduMovel.Models.Categoria

@{
    ViewData["Title"] = "Deletar";
}

<h1>Deleção</h1>

<h3>Tem certeza que voce vai deletar? Não terá volta!</h3>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">voltar</a>
    </form>
</div>
